{
  "name": "user_interaction_event",
  "version": 1,
  "description": "Schema for tracking user interactions with the application",
  "changes": "Initial version",
  "properties": {
    "userId": {
      "type": "string",
      "description": "Unique identifier for the user",
      "example": "user_12345"
    },
    "action": {
      "type": "string",
      "description": "The action performed by the user",
      "enum": ["click", "view", "scroll", "submit"],
      "example": "click"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When the event occurred",
      "example": "2023-06-01T15:30:45Z"
    },
    "context": {
      "type": "object",
      "description": "Additional contextual information",
      "properties": {
        "page": {
          "type": "string",
          "description": "Page where the event occurred",
          "example": "profile"
        },
        "component": {
          "type": "string",
          "description": "UI component involved",
          "example": "settings_button"
        }
      }
    }
  },
  "required": ["userId", "action", "timestamp"]
} 