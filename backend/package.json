{
  "name": "conceptus-veritas-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend for Conceptus Veritas application",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nodemon --exec ts-node src/main.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "setup-db": "ts-node src/db/init_db.ts",
    "install-hooks": "powershell -File scripts/install-hooks.ps1",
    "postinstall": "npm run install-hooks",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "type-check": "tsc --noEmit",
    "code-smell": "eslint . --ext .ts --max-warnings=0",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:api": "jest --testPathPattern=api",
    "test:coverage": "jest --coverage",
    "test:coverage:check": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "migrations:create": "node scripts/create-migration.js",
    "migrations:up": "node scripts/run-migrations.js up",
    "migrations:down": "node scripts/run-migrations.js down --step=1",
    "migrations:show": "npx typeorm-ts-node-commonjs migration:show --dataSource=src/db/data-source.ts",
    "migrations:generate": "npx typeorm-ts-node-commonjs migration:generate --dataSource=src/db/data-source.ts",
    "release:start": "node scripts/start-release.js",
    "release:finish": "node scripts/finish-release.js",
    "analytics:docs": "ts-node src/services/analytics/generate-docs.ts",
    "analytics:migrate": "ts-node src/services/analytics/auto-migrate.ts",
    "analytics:cli": "ts-node src/services/analytics/schema-cli.ts"
  },
  "dependencies": {
    "@sentry/node": "^7.83.0",
    "@sentry/profiling-node": "^1.2.6",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "sequelize": "^6.35.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  }
}
